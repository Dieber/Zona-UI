.oui-dialog
  position fixed
  background white
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  width: 400px
  min-height: 200px
  &-mask
    background-color: rgba(0,0,0,0.6)
    position: fixed
    width: 100%
    height: 100%
    left: 0
    top: 0
  &-default-content
    padding: 1em;
  &-header
    height: 34px;
    line-height: 34px;
    background-color: rgb(32,33,36)
    color: white
    padding-left: 16px;
  &-footer
    // bottom: 0;
    // right: 0;
    text-align: right;
    width: 100%;
    & > button
      margin: 10px 10px;