
dialogWidth = 400px
dialogMinHeight = 200px
dialogHeaderHeight = 34px
dialogFooterHeight = 56px
.oui-dialog
  position fixed
  background white
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  width: dialogWidth
  min-height: dialogMinHeight
  &-mask
    background-color: rgba(0,0,0,0.6)
    position: fixed
    width: 100%
    height: 100%
    left: 0
    top: 0
  &-main
    padding: 1em;
    min-height: dialogMinHeight - dialogHeaderHeight - dialogFooterHeight
    overflow-wrap: break-word
  &-header
    height: dialogHeaderHeight;
    line-height: dialogHeaderHeight;
    background-color: rgb(32,33,36)
    color: white
    padding-left: 16px;
  &-footer
    position relative
    bottom: 0;
    right: 0;
    text-align: right;
    width: 100%;
    height: dialogFooterHeight;
    line-height: dialogFooterHeight;
    & > button
      margin: 0 10px;

